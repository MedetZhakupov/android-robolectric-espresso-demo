<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.codepath.testingdemo.activities.CameraActivity">

    <ImageView
        android:id="@+id/ivThumbnail"
        android:scaleType="fitCenter"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/btnTakePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onTakePictureClicked"
        android:text="@string/take_picture_button_text" />

    <Button
        android:id="@+id/btnCompleteLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onCompleteLevelClicked"
        android:enabled="false"
        android:text="@string/complete_level_button_text" />

</LinearLayout>
